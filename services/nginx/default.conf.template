server {
    listen 443 ssl;

    ssl_certificate /etc/nginx/certs/cert.pem;
    ssl_certificate_key /etc/nginx/certs/key.pem;

    server_name web;

 location / {
            proxy_pass http://web:5000;
            proxy_set_header X-Real-IP $remote_addr;
        }
}

server {
    listen 80;
    server_name web;
    return 302 https://$server_name$request_uri;
}